<h1>Eat-Da-Burger!</h1>

<h2>not devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
      <p>Name: {{burger_name}}</p>
      <p>ID:{{id}}</p>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      <p>Name: {{burger_name}}</p>
      <p>ID:{{id}}</p>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form" action="/index" method="post">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" name="burger_name">
  </div>

  <div class="form-group">
    <label for="dev">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to eat!
  </div>

  <button type="submit">Submit</button>
</form>
